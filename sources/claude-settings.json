{
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Glob",
      "Grep",
      "Bash(git:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(export:*)",
      "Bash(infisical secrets:*)",
      "Bash(uv run:*)",
      "Bash(python3:*)",
      "Bash(python:*)",
      "Bash(cargo check:*)",
      "Bash(cargo test:*)",
      "Bash(ruff check:*)",
      "Bash(ruff format:*)",
      "Bash(pytest:*)",
      "Bash(mypy:*)",
      "Bash(npx tsc:*)",
      "Bash(npm run:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.local/bin/claude-notify",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.local/bin/claude-notify",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
